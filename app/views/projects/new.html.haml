= title "New Project"

= semantic_form_for(@project) do |f|
  / = f.error_messages

  = f.inputs "Please enter some overrall details" do
    = f.input :name, required: true
    = f.input :description
    = f.input :motivation

  = f.inputs "What sort of scale in terms of product units do you plan to build in a month" do
    =f.input :scale, :as => :range, :in => 0..1000, :step => 10

  = f.inputs "If you have an image please attach" do
    = f.input :image

  = f.inputs "Please tag your project concepts such as market eg. Food, electronics, textiles" do
    = f.input :search_tags, :input_html => { :value => "" }

  = f.actions do
    = f.action :submit
    / = f.action :cancel
